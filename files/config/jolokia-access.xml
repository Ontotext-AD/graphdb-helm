<?xml version="1.0" encoding="UTF-8"?>

<restrict>
    <!--Do not allow exec and write operations outside of allowed ones-->
    <commands>
        <command>read</command>
        <command>list</command>
        <command>version</command>
        <command>search</command>
    </commands>
    <allow>
        <mbean>
            <name>java.lang:type=Memory</name>
            <attribute mode="read">*</attribute>
            <operation>gc</operation>
        </mbean>
        <mbean>
            <name>ReplicationCluster:*</name>
            <attribute>*</attribute>
            <operation>*</operation>
        </mbean>
        <mbean>
            <name>Tomcat:*</name>
            <attribute>*</attribute>
            <operation>*</operation>
        </mbean>
        <mbean>
            <name>ch.qos.logback.classic:*</name>
            <attribute>*</attribute>
            <operation>*</operation>
        </mbean>
        <mbean>
            <name>com.ontotext:*</name>
            <attribute>*</attribute>
            <operation>*</operation>
        </mbean>
        <mbean>
            <name>java.util.logging:type=Logging</name>
            <attribute>*</attribute>
            <operation>*</operation>
        </mbean>
    </allow>

    <deny>
        <mbean>
            <name>jolokia:*</name>
            <operation>*</operation>
            <attribute>*</attribute>
        </mbean>
    </deny>
</restrict>
